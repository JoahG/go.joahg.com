<!DOCTYPE html>
<html>
<head>
  <title>JoahG.com</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

  <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
  <meta name="viewport" content="width=device-width">
  <link rel="icon" type="image/ico" href="assets/favicon2.png" />
</head>
<body>
	<div class="preload">
		<img class='loading' height='10' src='/assets/loading.gif' />
	</div>
	<div class="container">
		<div class="three columns sidebar">
			<nav>
				<h3 id="logo"> Joah Gerstenberg </h3>
				<button class="mobile-nav-trigger"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span></button>
				<ul>
					<li>
						<%= link_to "home", "http://www.joahg.com", :class => "nav_home" %>
					</li>
					<li>
						<%= link_to "about", "http://www.joahg.com/about", :class => "nav_home" %>
					</li>
					<li>
						<%= link_to "find", "http://www.joahg.com/find", :class => "nav_home" %>
					</li>
					<li>
						<%= link_to "blog", "http://blog.joahg.com/" %>
					</li>
					<li>
						<%= link_to "portfolio", "http://www.joahg.com/portfolio", :class => "nav_home" %>
					</li>
					<li>
						<a href="mailto:me@joahg.com" class="email">email</a>
					</li>
				</ul>
			</nav>
			<span class="nav-clearfix">&nbsp;</span>
		</div>
		<div class="twelve columns offset-by-one content">
			<%= yield %>
		</div>
	</div>

	<!-- Google Analytics -->

	<script>
	  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
	  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
	  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
	  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

	  ga('create', 'UA-45765973-1', 'joahg.com');
	  ga('send', 'pageview');
	</script>

	<!-- End Google Analytics -->


</body>
</html>